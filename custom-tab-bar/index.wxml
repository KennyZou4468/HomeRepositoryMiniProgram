<view class="tab-bar {{darkMode ? 'theme-dark' : ''}} {{elderMode ? 'elder-mode' : ''}}">
    <view class="tab-bar-item" wx:for="{{list}}" wx:key="index" data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
        <image class="tab-bar-icon" src="{{selected === index ? item.selectedIconPath : item.iconPath}}" />
        <text class="tab-bar-text {{selected === index ? 'selected' : ''}}">{{item.text}}</text>
    </view>
</view>