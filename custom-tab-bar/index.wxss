.tab-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: calc(100rpx * var(--ui-scale));
    display: flex;
    background-color: #ffffff;
    border-top: 1rpx solid #f0ebe4;
    padding-bottom: env(safe-area-inset-bottom);
    z-index: 999;
}

.tab-bar-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: calc(10rpx * var(--ui-scale)) 0;
}

.tab-bar-icon {
    width: calc(48rpx * var(--ui-scale));
    height: calc(48rpx * var(--ui-scale));
    margin-bottom: calc(6rpx * var(--ui-scale));
}

.tab-bar-text {
    font-size: calc(24rpx * var(--ui-scale));
    color: #999999;
}

.tab-bar-text.selected {
    color: #ff9a6c;
}

/* 暗色主题 */
.tab-bar.theme-dark {
    background-color: #1a1a1a;
    border-top-color: #333333;
}

.tab-bar.theme-dark .tab-bar-text {
    color: #888888;
}

.tab-bar.theme-dark .tab-bar-text.selected {
    color: #ff9a6c;
}

/* 老人关怀模式 - 组件内单独设置CSS变量 */
.tab-bar.elder-mode {
    --ui-scale: 1.5;
}

