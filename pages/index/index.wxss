/* pages/index/index.wxss */

/* 页面进入动画 */
@keyframes pageEnter {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.page-enter {
  animation: pageEnter 0.3s ease-out;
}

/* 卡片逐条淡入动画 */
@keyframes cardSlideIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.card-animate {
  animation: cardSlideIn 0.35s ease-out forwards;
  opacity: 0;
}

.container {
  padding: calc(30rpx * var(--ui-scale));
  padding-bottom: calc(320rpx * var(--ui-scale));
  background: linear-gradient(180deg, #fff9f0 0%, #faf8f5 100%);
  min-height: 100vh;
  box-sizing: border-box;
}

/* 页面标题 */
.page-header {
  text-align: center;
  padding: 20rpx 0 30rpx;
}

.page-title {
  font-size: 44rpx;
  font-weight: 600;
  color: #4a4a4a;
  display: block;
}

.page-subtitle {
  font-size: 26rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

/* 分类切换 Bar 样式 */
.category-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: calc(32rpx * var(--ui-scale)) 0 calc(20rpx * var(--ui-scale));
  background-color: #ffffff;
}

.category-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: calc(16rpx * var(--ui-scale)) 0;
  position: relative;
  transition: all 0.3s ease;
}

.category-text {
  font-size: calc(32rpx * var(--ui-scale));
  color: #999999;
  transition: all 0.3s ease;
}

/* 选中状态 */
.category-item.active .category-text {
  color: #2c2c2c;
  font-weight: 600;
}

/* 选中标识 - 底部横线 */
.category-indicator {
  position: absolute;
  bottom: 0;
  width: 60rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #ffb88e 0%, #ff9a6c 100%);
  border-radius: 3rpx;
  animation: indicatorSlide 0.3s ease-out;
}

@keyframes indicatorSlide {
  from {
    width: 0;
    opacity: 0;
  }
  to {
    width: 60rpx;
    opacity: 1;
  }
}

/* 分割线 */
.divider {
  width: 100%;
  height: 1rpx;
  background-color: #f0f0f0;
  margin-bottom: 24rpx;
}

/* 搜索框样式 */
.search-box {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 50rpx;
  padding: calc(20rpx * var(--ui-scale)) calc(30rpx * var(--ui-scale));
  margin-bottom: calc(30rpx * var(--ui-scale));
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid #f0ebe4;
}

.search-emoji {
  font-size: calc(32rpx * var(--ui-scale));
  margin-right: calc(16rpx * var(--ui-scale));
}

.search-input {
  flex: 1;
  font-size: calc(28rpx * var(--ui-scale));
  color: #5a5a5a;
}

.search-input::placeholder {
  color: #c0b8ae;
}

.clear-btn {
  width: calc(40rpx * var(--ui-scale));
  height: calc(40rpx * var(--ui-scale));
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #e8e4df;
  border-radius: 50%;
  margin-left: calc(16rpx * var(--ui-scale));
}

.clear-btn text {
  font-size: calc(24rpx * var(--ui-scale));
  color: #999;
}

/* 物品列表 */
.item-list {
  display: flex;
  flex-direction: column;
  gap: calc(20rpx * var(--ui-scale));
}

/* 物品卡片 */
.item-card {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: calc(20rpx * var(--ui-scale));
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #f5f0ea;
  transition: transform 0.15s ease, box-shadow 0.15s ease, background-color 0.15s ease;
}

.item-card:active {
  transform: scale(0.97);
  background-color: #fff8f2;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.card-main {
  flex: 1;
  display: flex;
  align-items: center;
}

.card-icon {
  font-size: calc(36rpx * var(--ui-scale));
  margin-right: calc(16rpx * var(--ui-scale));
}

.card-info {
  flex: 1;
  overflow: hidden;
}

.card-name {
  font-size: calc(30rpx * var(--ui-scale));
  font-weight: 600;
  color: #4a4a4a;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-location {
  display: flex;
  align-items: center;
  margin-top: calc(8rpx * var(--ui-scale));
}

.location-icon {
  font-size: calc(24rpx * var(--ui-scale));
  margin-right: calc(6rpx * var(--ui-scale));
}

.location-text {
  font-size: calc(26rpx * var(--ui-scale));
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-count-wrapper {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
  margin-left: calc(20rpx * var(--ui-scale));
}

.card-count {
  font-size: calc(30rpx * var(--ui-scale));
  font-weight: 600;
  color: #5a9b7a;
  line-height: 1;
}

.low-count {
  color: #e6995c;
}

.low-count-tip {
  font-size: calc(22rpx * var(--ui-scale));
  color: #e6995c;
  margin-top: calc(6rpx * var(--ui-scale));
}

.card-arrow {
  font-size: calc(36rpx * var(--ui-scale));
  color: #d0c8be;
  margin-left: calc(12rpx * var(--ui-scale));
}

/* 搜索无结果 */
.no-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: calc(100rpx * var(--ui-scale)) calc(40rpx * var(--ui-scale));
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.no-result-emoji {
  font-size: calc(64rpx * var(--ui-scale));
  margin-bottom: calc(20rpx * var(--ui-scale));
}

.no-result-text {
  font-size: calc(30rpx * var(--ui-scale));
  color: #666;
  text-align: center;
}

.no-result-hint {
  font-size: calc(26rpx * var(--ui-scale));
  color: #aaa;
  margin-top: calc(12rpx * var(--ui-scale));
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: calc(140rpx * var(--ui-scale)) calc(40rpx * var(--ui-scale));
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.empty-icon {
  font-size: calc(100rpx * var(--ui-scale));
  margin-bottom: calc(30rpx * var(--ui-scale));
}

.empty-title {
  font-size: calc(32rpx * var(--ui-scale));
  color: #5a5a5a;
  margin-bottom: calc(16rpx * var(--ui-scale));
}

.empty-subtitle {
  font-size: calc(26rpx * var(--ui-scale));
  color: #aaa;
}

/* 新增物品按钮 */
.add-button {
  position: fixed;
  bottom: calc(180rpx * var(--ui-scale));
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #ffb88e 0%, #ff9a6c 100%);
  color: #ffffff;
  padding: calc(28rpx * var(--ui-scale)) calc(56rpx * var(--ui-scale));
  border-radius: 50rpx;
  box-shadow: 0 10rpx 30rpx rgba(255, 152, 108, 0.4);
  transition: transform 0.15s ease, box-shadow 0.15s ease;
  z-index: 998;
  /* 按钮微微上下浮动动画 */
  animation: floatButton 3s ease-in-out infinite;
}

@keyframes floatButton {

  0%,
  100% {
    transform: translateX(-50%) translateY(0);
  }

  50% {
    transform: translateX(-50%) translateY(-8rpx);
  }
}

.add-button:active {
  transform: translateX(-50%) scale(0.94);
  box-shadow: 0 4rpx 16rpx rgba(255, 152, 108, 0.5);
  animation: none;
}

.add-icon {
  font-size: calc(32rpx * var(--ui-scale));
  margin-right: calc(12rpx * var(--ui-scale));
}

.add-text {
  font-size: calc(32rpx * var(--ui-scale));
  font-weight: 600;
}

/* ========== 暗色主题样式 ========== */
.theme-dark {
  background: linear-gradient(180deg, #1a1a1a 0%, #252525 100%) !important;
}

.theme-dark .page-title {
  color: #f0f0f0 !important;
}

.theme-dark .page-subtitle {
  color: #888888 !important;
}

.theme-dark .search-box {
  background-color: #2a2a2a !important;
  border-color: #3a3a3a !important;
}

.theme-dark .search-input {
  color: #e0e0e0 !important;
}

.theme-dark .search-input::placeholder {
  color: #666666 !important;
}

.theme-dark .clear-btn {
  background-color: #444444 !important;
  color: #888888 !important;
}

.theme-dark .item-card {
  background-color: #2a2a2a !important;
  border-color: #3a3a3a !important;
}

.theme-dark .item-card:active {
  background-color: #333333 !important;
}

.theme-dark .card-name {
  color: #f0f0f0 !important;
}

.theme-dark .card-location,
.theme-dark .card-category {
  color: #a0a0a0 !important;
}

.theme-dark .card-count {
  color: #8ecf87 !important;
}

.theme-dark .card-count.low-count {
  color: #e6995c !important;
}

.theme-dark .low-count-tip {
  color: #e6995c !important;
}

.theme-dark .card-arrow {
  color: #666666 !important;
}

.theme-dark .no-result-text,
.theme-dark .no-result-hint {
  color: #888888 !important;
}

.theme-dark .empty-state {
  background-color: #2a2a2a !important;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2) !important;
}

.theme-dark .no-result {
  background-color: #2a2a2a !important;
}

.theme-dark .empty-icon,
.theme-dark .empty-title,
.theme-dark .empty-subtitle {
  color: #888888 !important;
}

.theme-dark .item-name {
  color: #f0f0f0 !important;
}

.theme-dark .item-location,
.theme-dark .item-category,
.theme-dark .item-note {
  color: #a0a0a0 !important;
}

.theme-dark .item-count {
  color: #8ecf87 !important;
}

.theme-dark .item-count.low {
  color: #e6995c !important;
}

.theme-dark .empty-box {
  color: #888888 !important;
}

.theme-dark .empty-text,
.theme-dark .empty-subtitle {
  color: #888888 !important;
}

/* 暗色模式 - 分类切换 Bar */
.theme-dark .category-bar {
  background-color: #1a1a1a;
}

.theme-dark .category-text {
  color: #666666;
}

.theme-dark .category-item.active .category-text {
  color: #f0f0f0;
}

.theme-dark .divider {
  background-color: #333333;
}

/* ==================== 特殊物品到期状态样式 ==================== */

/* 区块标题 */
.item-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #4a4a4a;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

/* 到期状态标签 */
.expire-status {
  display: inline-block;
  padding: calc(6rpx * var(--ui-scale)) calc(16rpx * var(--ui-scale));
  border-radius: 20rpx;
  font-size: calc(22rpx * var(--ui-scale));
  margin-top: calc(10rpx * var(--ui-scale));
  font-weight: 500;
}

/* 警告状态（30天内） - 黄色 */
.expire-warning {
  background-color: #fff4e6;
  color: #e67e22;
}

.item-card.expire-warning {
  border-left: 6rpx solid #f39c12;
}

/* 危险状态（7天内） - 红色 */
.expire-danger {
  background-color: #ffe6e6;
  color: #e74c3c;
}

.item-card.expire-danger {
  border-left: 6rpx solid #e74c3c;
}

/* 已到期状态 - 灰色 */
.expire-expired {
  background-color: #f0f0f0;
  color: #999999;
}

.item-card.expire-expired {
  opacity: 0.6;
  border-left: 6rpx solid #cccccc;
}

.item-card.expire-expired .card-name,
.item-card.expire-expired .card-location,
.item-card.expire-expired .card-count {
  color: #999999;
}

/* 深色模式适配 */
.theme-dark .section-title {
  color: #f0f0f0;
}

.theme-dark .expire-warning {
  background-color: rgba(230, 126, 34, 0.2);
  color: #f39c12;
}

.theme-dark .expire-danger {
  background-color: rgba(231, 76, 60, 0.2);
  color: #e74c3c;
}

.theme-dark .expire-expired {
  background-color: rgba(153, 153, 153, 0.2);
  color: #888888;
}

.theme-dark .item-card.expire-expired .card-name,
.theme-dark .item-card.expire-expired .card-location,
.theme-dark .item-card.expire-expired .card-count {
  color: #888888;
}
