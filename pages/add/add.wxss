/* pages/add/add.wxss */

.container {
  padding: 30rpx;
  padding-bottom: 200rpx;
  background: linear-gradient(180deg, #fff9f0 0%, #faf8f5 100%);
  min-height: 100vh;
  box-sizing: border-box;
}

/* 页面标题 */
.page-header {
  text-align: center;
  padding: 20rpx 0 40rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #4a4a4a;
  display: block;
}

.page-subtitle {
  font-size: 26rpx;
  color: #999;
  margin-top: 12rpx;
  display: block;
}

/* 表单样式 */
.form {
  background-color: #ffffff;
  border-radius: 28rpx;
  padding: 16rpx 0;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid #f5f0ea;
}

.form-item {
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #f5f0ea;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 18rpx;
  font-size: 30rpx;
  color: #5a5a5a;
  font-weight: 500;
}

.label-emoji {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.required {
  color: #e6995c;
  margin-left: 8rpx;
  font-size: 26rpx;
}

.optional {
  color: #c0b8ae;
  margin-left: 12rpx;
  font-size: 24rpx;
  font-weight: 400;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 28rpx;
  font-size: 30rpx;
  color: #5a5a5a;
  background-color: #faf8f5;
  border-radius: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #f0ebe4;
}

.form-input:focus {
  border-color: #ffb88e;
  background-color: #fffcf8;
}

.form-input::placeholder {
  color: #c0b8ae;
}

.form-textarea {
  width: 100%;
  min-height: 140rpx;
  padding: 24rpx 28rpx;
  font-size: 30rpx;
  color: #5a5a5a;
  background-color: #faf8f5;
  border-radius: 20rpx;
  box-sizing: border-box;
  line-height: 1.6;
  border: 2rpx solid #f0ebe4;
}

.form-textarea::placeholder {
  color: #c0b8ae;
}

/* 按钮区域 */
.button-group {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 28rpx 36rpx;
  padding-bottom: calc(28rpx + env(safe-area-inset-bottom));
  background-color: #ffffff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.btn {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 48rpx;
  margin: 0;
  padding: 0;
  font-weight: 500;
  transition: all 0.2s ease;
}

.btn-cancel {
  background-color: #f5f0ea;
  color: #8a8279;
  margin-right: 24rpx;
  flex: 0.6;
}

.btn-cancel:active {
  background-color: #ebe6e0;
  transform: scale(0.98);
}

.btn-save {
  background: linear-gradient(135deg, #ffb88e 0%, #ff9a6c 100%);
  color: #ffffff;
  box-shadow: 0 6rpx 20rpx rgba(255, 152, 108, 0.35);
}

.btn-save:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 108, 0.35);
}

/* 选择器样式 */
.form-select {
  display: flex;
  align-items: center;
  width: 100%;
  height: 88rpx;
  padding: 0 28rpx;
  font-size: 30rpx;
  background-color: #faf8f5;
  border-radius: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #f0ebe4;
}

.form-select:active {
  background-color: #f5f0ea;
}

.select-value {
  flex: 1;
  color: #5a5a5a;
}

.select-placeholder {
  flex: 1;
  color: #c0b8ae;
}

.select-arrow {
  font-size: 36rpx;
  color: #c0b8ae;
  margin-left: 12rpx;
}

/* 选择弹窗 */
.picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.picker-popup {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  z-index: 101;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
  padding-bottom: env(safe-area-inset-bottom);
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0ebe4;
}

.picker-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #4a4a4a;
}

.picker-close {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 32rpx;
  color: #999;
  background-color: #f5f0ea;
  border-radius: 50%;
}

.picker-list {
  flex: 1;
  max-height: 50vh;
  padding: 16rpx 0;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  font-size: 30rpx;
  color: #5a5a5a;
}

.picker-item:active {
  background-color: #faf8f5;
}

.picker-item.active {
  color: #ff9a6c;
  background-color: #fff5eb;
}

.picker-item-clear {
  color: #999;
}

.picker-check {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: linear-gradient(135deg, #ffb88e 0%, #ff9a6c 100%);
  color: #fff;
  border-radius: 50%;
  font-size: 24rpx;
}

.picker-add {
  padding: 28rpx 32rpx;
  text-align: center;
  border-top: 1rpx dashed #f0ebe4;
}

.picker-add text {
  font-size: 28rpx;
  color: #ff9a6c;
}

.picker-add:active {
  background-color: #fff5eb;
}

.picker-add-input {
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx;
  border-top: 1rpx dashed #f0ebe4;
  gap: 16rpx;
}

.picker-add-input .add-input {
  flex: 1;
  height: 72rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  background-color: #faf8f5;
  border-radius: 12rpx;
  border: 2rpx solid #f0ebe4;
}

.picker-add-input .add-confirm {
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  color: #fff;
  background: linear-gradient(135deg, #ffb88e 0%, #ff9a6c 100%);
  border-radius: 12rpx;
}

/* ========== 暗色主题样式 ========== */
.theme-dark {
  background: linear-gradient(180deg, #1a1a1a 0%, #252525 100%) !important;
}

.theme-dark .page-title {
  color: #f0f0f0 !important;
}

.theme-dark .page-subtitle {
  color: #888888 !important;
}

.theme-dark .form {
  background-color: #2a2a2a !important;
  border-color: #3a3a3a !important;
}

.theme-dark .form-item {
  border-color: #3a3a3a !important;
}

.theme-dark .form-label {
  color: #d0d0d0 !important;
}

.theme-dark .required {
  color: #e6995c !important;
}

.theme-dark .optional {
  color: #666666 !important;
}

.theme-dark .form-input,
.theme-dark .form-textarea {
  background-color: #333333 !important;
  border-color: #444444 !important;
  color: #e0e0e0 !important;
}

.theme-dark .form-select {
  background-color: #333333 !important;
  border-color: #444444 !important;
}

.theme-dark .select-value {
  color: #e0e0e0 !important;
}

.theme-dark .select-placeholder {
  color: #666666 !important;
}

.theme-dark .count-control {
  background-color: #333333 !important;
  border-color: #444444 !important;
}

.theme-dark .count-btn.decrease {
  background-color: #444444 !important;
  color: #888888 !important;
}

.theme-dark .count-value {
  color: #e0e0e0 !important;
}

.theme-dark .count-unit {
  color: #888888 !important;
}

.theme-dark .picker-popup {
  background-color: #2a2a2a !important;
}

.theme-dark .picker-header {
  border-color: #3a3a3a !important;
}

.theme-dark .picker-title {
  color: #f0f0f0 !important;
}

.theme-dark .picker-close {
  color: #888888 !important;
}

.theme-dark .picker-item {
  color: #d0d0d0 !important;
}

.theme-dark .picker-item:active,
.theme-dark .picker-item.selected {
  background-color: #333333 !important;
}

.theme-dark .picker-add {
  border-color: #3a3a3a !important;
}

.theme-dark .picker-add-input {
  border-color: #3a3a3a !important;
}

.theme-dark .picker-add-input .add-input {
  background-color: #333333 !important;
  border-color: #444444 !important;
  color: #e0e0e0 !important;
}

/* 底部按钮栏暗色主题 */
.theme-dark .button-group {
  background-color: #1a1a1a !important;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.3) !important;
}

.theme-dark .btn-cancel {
  background-color: #333333 !important;
  color: #888888 !important;
}

.theme-dark .btn-cancel:active {
  background-color: #444444 !important;
}
