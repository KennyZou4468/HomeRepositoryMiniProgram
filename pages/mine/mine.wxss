/* pages/mine/mine.wxss */

/* 页面进入动画 */
@keyframes pageEnter {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.page-enter {
  animation: pageEnter 0.3s ease-out;
}

/* 区块渐入动画 */
@keyframes sectionSlideIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.section-animate {
  animation: sectionSlideIn 0.35s ease-out forwards;
  opacity: 0;
}

.container {
  padding: 30rpx;
  padding-bottom: 160rpx;
  background: linear-gradient(180deg, #fff9f0 0%, #faf8f5 100%);
  min-height: 100vh;
  box-sizing: border-box;
}

/* 页面标题 */
.page-header {
  text-align: center;
  padding: 20rpx 0 40rpx;
}

.page-title {
  font-size: 44rpx;
  font-weight: 600;
  color: #4a4a4a;
  display: block;
}

.page-subtitle {
  font-size: 26rpx;
  color: #999;
  margin-top: 12rpx;
  display: block;
}

/* 区块 */
.section {
  background-color: #ffffff;
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid #f5f0ea;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 34rpx;
  font-weight: 600;
  color: #4a4a4a;
  margin-bottom: 24rpx;
}

.section-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

/* 主题选项 */
.theme-options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.theme-option {
  display: flex;
  align-items: center;
  padding: 24rpx 28rpx;
  background-color: #faf8f5;
  border-radius: 20rpx;
  border: 2rpx solid #f0ebe4;
  transition: transform 0.15s ease, background-color 0.25s ease, border-color 0.25s ease, box-shadow 0.25s ease;
}

.theme-option.active {
  background: linear-gradient(135deg, #fff5eb 0%, #ffefe3 100%);
  border-color: #ffb88e;
  box-shadow: 0 4rpx 16rpx rgba(255, 184, 142, 0.2);
}

.theme-option:active {
  transform: scale(0.97);
}

.theme-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
  line-height: 1;
  display: flex;
  align-items: center;
}

.theme-label {
  flex: 1;
  font-size: 30rpx;
  color: #5a5a5a;
  line-height: 1;
}

.theme-check {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: linear-gradient(135deg, #ffb88e 0%, #ff9a6c 100%);
  color: #fff;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: bold;
}

/* 子区块 */
.subsection {
  margin-top: 24rpx;
  padding-top: 20rpx;
  border-top: 1rpx dashed #f0ebe4;
}

.subsection:first-of-type {
  margin-top: 0;
  padding-top: 0;
  border-top: none;
}

.subsection-title {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 16rpx;
  display: block;
}

/* 标签列表 */
.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  display: flex;
  align-items: center;
  padding: 14rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  transition: transform 0.15s ease, box-shadow 0.15s ease;
}

.tag:active {
  transform: scale(0.95);
}

.tag-preset {
  background-color: #f0f5eb;
  color: #5a9b7a;
  border: 1rpx solid #d8e8d2;
}

.tag-preset:active {
  box-shadow: 0 2rpx 8rpx rgba(90, 155, 122, 0.2);
}

.tag-custom {
  background-color: #fff5eb;
  color: #e6995c;
  border: 1rpx solid #ffe4cc;
}

.tag-custom:active {
  box-shadow: 0 2rpx 8rpx rgba(230, 153, 92, 0.25);
}

.tag-delete {
  margin-left: 12rpx;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  background-color: rgba(230, 153, 92, 0.2);
  border-radius: 50%;
  font-size: 20rpx;
  color: #e6995c;
}

.tag-delete:active {
  background-color: rgba(230, 153, 92, 0.4);
}

/* 空提示 */
.empty-tip {
  padding: 20rpx 0;
  text-align: center;
}

.empty-tip text {
  font-size: 26rpx;
  color: #c0b8ae;
}

/* 添加按钮 */
.add-btn {
  margin-top: 20rpx;
  padding: 20rpx 0;
  text-align: center;
  background-color: #faf8f5;
  border-radius: 16rpx;
  border: 2rpx dashed #e0d8cf;
  transition: all 0.2s ease;
}

.add-btn:active {
  background-color: #f5f0ea;
  transform: scale(0.98);
}

.add-btn text {
  font-size: 28rpx;
  color: #8a8279;
}

/* 添加输入框 */
.add-input-wrapper {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #faf8f5;
  border-radius: 16rpx;
  border: 2rpx solid #f0ebe4;
}

.add-input {
  width: 100%;
  height: 72rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #5a5a5a;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-sizing: border-box;
  border: 2rpx solid #f0ebe4;
}

.add-input-btns {
  display: flex;
  justify-content: flex-end;
  gap: 24rpx;
  margin-top: 16rpx;
}

.add-input-cancel {
  font-size: 28rpx;
  color: #999;
  padding: 12rpx 24rpx;
}

.add-input-confirm {
  font-size: 28rpx;
  color: #ff9a6c;
  font-weight: 500;
  padding: 12rpx 24rpx;
}

.add-input-cancel:active,
.add-input-confirm:active {
  opacity: 0.7;
}

/* 底部留白 */
.footer-space {
  height: 40rpx;
}

/* ========== 存储管理样式 ========== */
.storage-info {
  padding: 20rpx 0;
}

.storage-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.storage-label {
  font-size: 28rpx;
  color: #666666;
}

.storage-value-wrapper {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background-color: #f5f0ea;
  border-radius: 12rpx;
  transition: background-color 0.2s;
}

.storage-value-wrapper:active {
  background-color: #ebe6e0;
}

.storage-value {
  font-size: 28rpx;
  color: #5a5a5a;
  font-weight: 500;
}

.storage-unit-toggle {
  font-size: 20rpx;
}

.storage-hint {
  display: block;
  margin-top: 12rpx;
  font-size: 22rpx;
  color: #aaa;
}

.storage-bar-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.storage-bar {
  flex: 1;
  height: 16rpx;
  background-color: #f0ebe4;
  border-radius: 8rpx;
  overflow: hidden;
}

.storage-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #a8d5a2 0%, #8ec587 100%);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.storage-bar-fill.warning {
  background: linear-gradient(90deg, #ffb88e 0%, #ff9a6c 100%);
}

.storage-percentage {
  font-size: 24rpx;
  color: #888888;
  min-width: 60rpx;
  text-align: right;
}

.storage-tip {
  display: block;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #e6995c;
  background-color: #fff5eb;
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
}

.storage-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx dashed #f0ebe4;
}

.storage-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx 16rpx;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.storage-btn-items {
  background-color: #f5f0ea;
}

.storage-btn-items:active {
  background-color: #ebe6e0;
  transform: scale(0.98);
}

.storage-btn-all {
  background-color: #fff5f3;
  border: 2rpx solid #f0d4cf;
}

.storage-btn-all:active {
  background-color: #ffefec;
  transform: scale(0.98);
}

.storage-btn-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.storage-btn-text {
  font-size: 24rpx;
  color: #666666;
}

.storage-btn-all .storage-btn-text {
  color: #d4847a;
}

/* ========== 暗色主题样式 ========== */
.theme-dark {
  background: linear-gradient(180deg, #1a1a1a 0%, #252525 100%) !important;
}

.theme-dark .section {
  background-color: #2a2a2a !important;
  border-color: #3a3a3a !important;
}

.theme-dark .page-title,
.theme-dark .section-title {
  color: #f0f0f0 !important;
}

.theme-dark .page-subtitle,
.theme-dark .subsection-title {
  color: #888888 !important;
}

.theme-dark .theme-option {
  background-color: #333333 !important;
  border-color: #444444 !important;
}

.theme-dark .theme-option.active {
  background: linear-gradient(135deg, #4a3a2a 0%, #3d3025 100%) !important;
  border-color: #ff9a6c !important;
}

.theme-dark .theme-label {
  color: #d0d0d0 !important;
}

.theme-dark .theme-check {
  color: #ff9a6c !important;
}

.theme-dark .tag-preset {
  background-color: #3a3a3a !important;
  color: #c0c0c0 !important;
}

.theme-dark .tag-custom {
  background-color: #3d3530 !important;
  color: #ffb88e !important;
  border-color: #5a4a3a !important;
}

.theme-dark .tag-delete {
  color: #888888 !important;
}

.theme-dark .empty-tip {
  color: #666666 !important;
}

.theme-dark .add-btn {
  background-color: #333333 !important;
  color: #ff9a6c !important;
}

.theme-dark .add-input {
  background-color: #333333 !important;
  border-color: #444444 !important;
  color: #e0e0e0 !important;
}

.theme-dark .add-input-cancel {
  color: #888888 !important;
}

/* 存储管理暗色主题 */
.theme-dark .storage-label {
  color: #888888 !important;
}

.theme-dark .storage-value-wrapper {
  background-color: #333333 !important;
}

.theme-dark .storage-value-wrapper:active {
  background-color: #444444 !important;
}

.theme-dark .storage-value {
  color: #d0d0d0 !important;
}

.theme-dark .storage-hint {
  color: #666666 !important;
}

.theme-dark .storage-bar {
  background-color: #444444 !important;
}

.theme-dark .storage-percentage {
  color: #888888 !important;
}

.theme-dark .storage-tip {
  background-color: #3d3025 !important;
  color: #e6995c !important;
}

.theme-dark .storage-actions {
  border-color: #3a3a3a !important;
}

.theme-dark .storage-btn-items {
  background-color: #333333 !important;
}

.theme-dark .storage-btn-items:active {
  background-color: #444444 !important;
}

.theme-dark .storage-btn-all {
  background-color: #3a2a2a !important;
  border-color: #5a3a3a !important;
}

.theme-dark .storage-btn-all:active {
  background-color: #4a3a3a !important;
}

.theme-dark .storage-btn-text {
  color: #a0a0a0 !important;
}

.theme-dark .storage-btn-all .storage-btn-text {
  color: #d4847a !important;
}