/* pages/mine/mine.wxss */

/* 页面进入动画 */
@keyframes pageEnter {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.page-enter {
  animation: pageEnter 0.3s ease-out;
}

/* 区块渐入动画 */
@keyframes sectionSlideIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.section-animate {
  animation: sectionSlideIn 0.35s ease-out forwards;
  opacity: 0;
}

.container {
  padding: calc(30rpx * var(--ui-scale));
  padding-bottom: calc(160rpx * var(--ui-scale));
  background: linear-gradient(180deg, #fff9f0 0%, #faf8f5 100%);
  min-height: 100vh;
  box-sizing: border-box;
}

/* 页面标题 */
.page-header {
  text-align: center;
  padding: calc(20rpx * var(--ui-scale)) 0 calc(40rpx * var(--ui-scale));
}

.page-title {
  font-size: calc(44rpx * var(--ui-scale));
  font-weight: 600;
  color: #4a4a4a;
  display: block;
}

.page-subtitle {
  font-size: calc(26rpx * var(--ui-scale));
  color: #999;
  margin-top: calc(12rpx * var(--ui-scale));
  display: block;
}

/* 区块 */
.section {
  background-color: #ffffff;
  border-radius: 28rpx;
  padding: calc(32rpx * var(--ui-scale));
  margin-bottom: calc(24rpx * var(--ui-scale));
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid #f5f0ea;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: calc(34rpx * var(--ui-scale));
  font-weight: 600;
  color: #4a4a4a;
  margin-bottom: calc(24rpx * var(--ui-scale));
}

.section-icon {
  font-size: calc(36rpx * var(--ui-scale));
  margin-right: calc(12rpx * var(--ui-scale));
}

/* 主题选项 */
.theme-options {
  display: flex;
  flex-direction: column;
  gap: calc(16rpx * var(--ui-scale));
}

.theme-option {
  display: flex;
  align-items: center;
  padding: calc(24rpx * var(--ui-scale)) calc(28rpx * var(--ui-scale));
  background-color: #faf8f5;
  border-radius: 20rpx;
  border: 2rpx solid #f0ebe4;
  transition: transform 0.15s ease, background-color 0.25s ease, border-color 0.25s ease, box-shadow 0.25s ease;
}

.theme-option.active {
  background: linear-gradient(135deg, #fff5eb 0%, #ffefe3 100%);
  border-color: #ffb88e;
  box-shadow: 0 4rpx 16rpx rgba(255, 184, 142, 0.2);
}

.theme-option:active {
  transform: scale(0.97);
}

.theme-icon {
  font-size: calc(36rpx * var(--ui-scale));
  margin-right: calc(16rpx * var(--ui-scale));
  line-height: 1;
  display: flex;
  align-items: center;
}

.theme-label {
  flex: 1;
  font-size: calc(30rpx * var(--ui-scale));
  color: #5a5a5a;
  line-height: 1;
}

.theme-check {
  width: calc(40rpx * var(--ui-scale));
  height: calc(40rpx * var(--ui-scale));
  line-height: calc(40rpx * var(--ui-scale));
  text-align: center;
  background: linear-gradient(135deg, #ffb88e 0%, #ff9a6c 100%);
  color: #fff;
  border-radius: 50%;
  font-size: calc(24rpx * var(--ui-scale));
  font-weight: bold;
}

/* 老人关怀模式 */
.elder-mode-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: calc(24rpx * var(--ui-scale)) calc(28rpx * var(--ui-scale));
  background-color: #faf8f5;
  border-radius: 20rpx;
  border: 2rpx solid #f0ebe4;
}

.elder-mode-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: calc(8rpx * var(--ui-scale));
}

.elder-mode-label {
  font-size: calc(30rpx * var(--ui-scale));
  color: #5a5a5a;
  font-weight: 500;
}

.elder-mode-desc {
  font-size: calc(24rpx * var(--ui-scale));
  color: #999999;
  line-height: 1.5;
}

.elder-mode-switch {
  transform: scale(1.1);
  margin-left: 20rpx;
}

/* 子区块 */
.subsection {
  margin-top: 24rpx;
  padding-top: 20rpx;
  border-top: 1rpx dashed #f0ebe4;
}

.subsection:first-of-type {
  margin-top: 0;
  padding-top: 0;
  border-top: none;
}

.subsection-title {
  font-size: calc(26rpx * var(--ui-scale));
  color: #999;
  margin-bottom: calc(16rpx * var(--ui-scale));
  display: block;
}

/* 标签列表 */
.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: calc(16rpx * var(--ui-scale));
}

.tag {
  display: flex;
  align-items: center;
  padding: calc(14rpx * var(--ui-scale)) calc(24rpx * var(--ui-scale));
  border-radius: 30rpx;
  font-size: calc(26rpx * var(--ui-scale));
  transition: transform 0.15s ease, box-shadow 0.15s ease;
}

.tag:active {
  transform: scale(0.95);
}

.tag-preset {
  background-color: #f0f5eb;
  color: #5a9b7a;
  border: 1rpx solid #d8e8d2;
}

.tag-preset:active {
  box-shadow: 0 2rpx 8rpx rgba(90, 155, 122, 0.2);
}

.tag-custom {
  background-color: #fff5eb;
  color: #e6995c;
  border: 1rpx solid #ffe4cc;
}

.tag-custom:active {
  box-shadow: 0 2rpx 8rpx rgba(230, 153, 92, 0.25);
}

.tag-delete {
  margin-left: calc(12rpx * var(--ui-scale));
  width: calc(32rpx * var(--ui-scale));
  height: calc(32rpx * var(--ui-scale));
  line-height: calc(32rpx * var(--ui-scale));
  text-align: center;
  background-color: rgba(230, 153, 92, 0.2);
  border-radius: 50%;
  font-size: calc(20rpx * var(--ui-scale));
  color: #e6995c;
}

.tag-delete:active {
  background-color: rgba(230, 153, 92, 0.4);
}

/* 空提示 */
.empty-tip {
  padding: calc(20rpx * var(--ui-scale)) 0;
  text-align: center;
}

.empty-tip text {
  font-size: calc(26rpx * var(--ui-scale));
  color: #c0b8ae;
}

/* 添加按钮 */
.add-btn {
  margin-top: calc(20rpx * var(--ui-scale));
  padding: calc(20rpx * var(--ui-scale)) 0;
  text-align: center;
  background-color: #faf8f5;
  border-radius: 16rpx;
  border: 2rpx dashed #e0d8cf;
  transition: all 0.2s ease;
}

.add-btn:active {
  background-color: #f5f0ea;
  transform: scale(0.98);
}

.add-btn text {
  font-size: calc(28rpx * var(--ui-scale));
  color: #8a8279;
}

/* 添加输入框 */
.add-input-wrapper {
  margin-top: calc(20rpx * var(--ui-scale));
  padding: calc(20rpx * var(--ui-scale));
  background-color: #faf8f5;
  border-radius: 16rpx;
  border: 2rpx solid #f0ebe4;
}

.add-input {
  width: 100%;
  height: calc(72rpx * var(--ui-scale));
  padding: 0 calc(24rpx * var(--ui-scale));
  font-size: calc(28rpx * var(--ui-scale));
  color: #5a5a5a;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-sizing: border-box;
  border: 2rpx solid #f0ebe4;
}

.add-input-btns {
  display: flex;
  justify-content: flex-end;
  gap: calc(24rpx * var(--ui-scale));
  margin-top: calc(16rpx * var(--ui-scale));
}

.add-input-cancel {
  font-size: calc(28rpx * var(--ui-scale));
  color: #999;
  padding: calc(12rpx * var(--ui-scale)) calc(24rpx * var(--ui-scale));
}

.add-input-confirm {
  font-size: calc(28rpx * var(--ui-scale));
  color: #ff9a6c;
  font-weight: 500;
  padding: calc(12rpx * var(--ui-scale)) calc(24rpx * var(--ui-scale));
}

.add-input-cancel:active,
.add-input-confirm:active {
  opacity: 0.7;
}

/* 底部留白 */
.footer-space {
  height: 40rpx;
}

/* ========== 存储管理样式 ========== */
.storage-info {
  padding: 20rpx 0;
}

.storage-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.storage-label {
  font-size: calc(28rpx * var(--ui-scale));
  color: #666666;
}

.storage-value-wrapper {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background-color: #f5f0ea;
  border-radius: 12rpx;
  transition: background-color 0.2s;
}

.storage-value-wrapper:active {
  background-color: #ebe6e0;
}

.storage-value {
  font-size: calc(28rpx * var(--ui-scale));
  color: #5a5a5a;
  font-weight: 500;
}

.storage-unit-toggle {
  font-size: calc(20rpx * var(--ui-scale));
}

.storage-hint {
  display: block;
  margin-top: calc(12rpx * var(--ui-scale));
  font-size: calc(22rpx * var(--ui-scale));
  color: #aaa;
}

.storage-bar-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.storage-bar {
  flex: 1;
  height: 16rpx;
  background-color: #f0ebe4;
  border-radius: 8rpx;
  overflow: hidden;
}

.storage-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #a8d5a2 0%, #8ec587 100%);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.storage-bar-fill.warning {
  background: linear-gradient(90deg, #ffb88e 0%, #ff9a6c 100%);
}

.storage-percentage {
  font-size: calc(24rpx * var(--ui-scale));
  color: #888888;
  min-width: calc(60rpx * var(--ui-scale));
  text-align: right;
}

.storage-tip {
  display: block;
  margin-top: calc(16rpx * var(--ui-scale));
  font-size: calc(24rpx * var(--ui-scale));
  color: #e6995c;
  background-color: #fff5eb;
  padding: calc(12rpx * var(--ui-scale)) calc(16rpx * var(--ui-scale));
  border-radius: 8rpx;
}

.storage-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx dashed #f0ebe4;
}

.storage-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: calc(24rpx * var(--ui-scale)) calc(16rpx * var(--ui-scale));
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.storage-btn-items {
  background-color: #f5f0ea;
}

.storage-btn-items:active {
  background-color: #ebe6e0;
  transform: scale(0.98);
}

.storage-btn-all {
  background-color: #fff5f3;
  border: 2rpx solid #f0d4cf;
}

.storage-btn-all:active {
  background-color: #ffefec;
  transform: scale(0.98);
}

.storage-btn-icon {
  font-size: calc(40rpx * var(--ui-scale));
  margin-bottom: calc(8rpx * var(--ui-scale));
}

.storage-btn-text {
  font-size: calc(24rpx * var(--ui-scale));
  color: #666666;
}

.storage-btn-all .storage-btn-text {
  color: #d4847a;
}

/* ========== 暗色主题样式 ========== */
.theme-dark {
  background: linear-gradient(180deg, #1a1a1a 0%, #252525 100%) !important;
}

.theme-dark .section {
  background-color: #2a2a2a !important;
  border-color: #3a3a3a !important;
}

.theme-dark .page-title,
.theme-dark .section-title {
  color: #f0f0f0 !important;
}

.theme-dark .page-subtitle,
.theme-dark .subsection-title {
  color: #888888 !important;
}

.theme-dark .theme-option {
  background-color: #333333 !important;
  border-color: #444444 !important;
}

.theme-dark .theme-option.active {
  background: linear-gradient(135deg, #4a3a2a 0%, #3d3025 100%) !important;
  border-color: #ff9a6c !important;
}

.theme-dark .theme-label {
  color: #d0d0d0 !important;
}

.theme-dark .theme-check {
  color: #ff9a6c !important;
}

.theme-dark .tag-preset {
  background-color: #3a3a3a !important;
  color: #c0c0c0 !important;
}

.theme-dark .tag-custom {
  background-color: #3d3530 !important;
  color: #ffb88e !important;
  border-color: #5a4a3a !important;
}

.theme-dark .tag-delete {
  color: #888888 !important;
}

.theme-dark .empty-tip {
  color: #666666 !important;
}

.theme-dark .add-btn {
  background-color: #333333 !important;
  color: #ff9a6c !important;
}

.theme-dark .add-input {
  background-color: #333333 !important;
  border-color: #444444 !important;
  color: #e0e0e0 !important;
}

.theme-dark .add-input-cancel {
  color: #888888 !important;
}

/* 存储管理暗色主题 */
.theme-dark .storage-label {
  color: #888888 !important;
}

.theme-dark .storage-value-wrapper {
  background-color: #333333 !important;
}

.theme-dark .storage-value-wrapper:active {
  background-color: #444444 !important;
}

.theme-dark .storage-value {
  color: #d0d0d0 !important;
}

.theme-dark .storage-hint {
  color: #666666 !important;
}

.theme-dark .storage-bar {
  background-color: #444444 !important;
}

.theme-dark .storage-percentage {
  color: #888888 !important;
}

.theme-dark .storage-tip {
  background-color: #3d3025 !important;
  color: #e6995c !important;
}

.theme-dark .storage-actions {
  border-color: #3a3a3a !important;
}

.theme-dark .storage-btn-items {
  background-color: #333333 !important;
}

.theme-dark .storage-btn-items:active {
  background-color: #444444 !important;
}

.theme-dark .storage-btn-all {
  background-color: #3a2a2a !important;
  border-color: #5a3a3a !important;
}

.theme-dark .storage-btn-all:active {
  background-color: #4a3a3a !important;
}

.theme-dark .storage-btn-text {
  color: #a0a0a0 !important;
}

.theme-dark .storage-btn-all .storage-btn-text {
  color: #d4847a !important;
}

/* ==================== 开发者名片卡样式 ==================== */
.developer-card {
  margin-top: 60rpx;
  padding: 40rpx;
  background-color: #ffffff;
  border-radius: 28rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid #f5f0ea;
  display: flex;
  gap: 32rpx;
}

/* 左侧头像区域 */
.card-left {
  flex-shrink: 0;
}

.avatar {
  width: calc(140rpx * var(--ui-scale));
  height: calc(140rpx * var(--ui-scale));
  border-radius: 28rpx;
  background: linear-gradient(135deg, #fff5eb 0%, #ffe9d6 100%);
  border: 3rpx solid #ffb88e;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(255, 152, 108, 0.2);
}

.avatar-text {
  font-size: 72rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
}

/* 右侧信息区域 */
.card-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.card-name {
  font-size: calc(36rpx * var(--ui-scale));
  font-weight: 600;
  color: #2c2c2c;
  margin-bottom: calc(8rpx * var(--ui-scale));
}

.card-title {
  font-size: calc(24rpx * var(--ui-scale));
  color: #999999;
  margin-bottom: calc(20rpx * var(--ui-scale));
}

.card-intro {
  font-size: calc(26rpx * var(--ui-scale));
  color: #666666;
  line-height: 1.6;
  margin-bottom: calc(24rpx * var(--ui-scale));
}

/* 链接列表 */
.link-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.link-item {
  display: flex;
  align-items: center;
  padding: calc(16rpx * var(--ui-scale)) calc(20rpx * var(--ui-scale));
  background: linear-gradient(135deg, #faf8f5 0%, #f5f0ea 100%);
  border-radius: 16rpx;
  border: 2rpx solid #f0ebe4;
  transition: all 0.3s ease;
}

.link-item:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #fff5eb 0%, #fff9f0 100%);
  border-color: #ffb88e;
}

.link-item-icon {
  font-size: calc(32rpx * var(--ui-scale));
  margin-right: calc(16rpx * var(--ui-scale));
}

.link-item-text {
  flex: 1;
  font-size: calc(28rpx * var(--ui-scale));
  color: #ff9a6c;
  font-weight: 500;
}

.link-item-arrow {
  font-size: calc(36rpx * var(--ui-scale));
  color: #c0b8ae;
}

.card-tip {
  font-size: calc(22rpx * var(--ui-scale));
  color: #999999;
  text-align: center;
}

/* 暗色模式 - 开发者名片卡 */
.theme-dark .developer-card {
  background-color: #2a2a2a;
  border-color: #3a3a3a;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.theme-dark .avatar {
  background: linear-gradient(135deg, #3a3a3a 0%, #333333 100%);
  border-color: #ff9a6c;
}

.theme-dark .card-name {
  color: #f0f0f0;
}

.theme-dark .card-title {
  color: #888888;
}

.theme-dark .card-intro {
  color: #a0a0a0;
}

.theme-dark .link-item {
  background: linear-gradient(135deg, #333333 0%, #2a2a2a 100%);
  border-color: #444444;
}

.theme-dark .link-item:active {
  background: linear-gradient(135deg, #3a3a3a 0%, #333333 100());
  border-color: #ff9a6c;
}

.theme-dark .link-item-text {
  color: #ffb88e;
}

.theme-dark .link-item-arrow {
  color: #666666;
}

.theme-dark .card-tip {
  color: #666666;
}
